<%= render 'layouts/header'%>

<div class="container">
  <div class= "row">
      <div class="col-xs-8 col-xs-offset-4" style="margin-top: 50px;">
        <h2 class="title">こちらからログイン</h2>
    
         <%= form_with model: @user, url: user_session_path(current_user), local: true do |f| %>
        
        
        <div class="row form-group">
          <label class="col-xs-3 control-label">メールアドレス</label>
            <div class="col-xs-4">
             <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "メールアドレス" %>
           </div>
        </div> 
      
        <div class="row form-group">
           <label class="col-xs-3 control-label"> パスワード<br/>(6文字以上)</label>
             <div class="col-xs-4">
                <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "パスワード" %>
             </div>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="row form-group">
            <label class="col-xs-3 control-label"> 情報を保存する</label>
            <div class="col-xs-4">
             <%= f.check_box :remember_me %>
            </div>
          </div>
        <% end %>
      
       <div class="row form-group">
          <div class="col-xs-4 col-xs-offset-3">
            <%= f.submit "ログイン", class: "btn btn-warning btn-block" %>
          </div>
      </div>
      <% end %>
      </div>
  </div>
</div>

<%= render 'layouts/footer'%>
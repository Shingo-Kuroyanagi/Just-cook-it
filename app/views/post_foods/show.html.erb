<%= render 'layouts/header'%>
<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <!--ここから　投稿画像-->
      <div class="img_field">
        <%= attachment_image_tag @post_food, :image, fallback: "no_image.jpg", class: "img-responsive img-thumbnail product-image",size: '200x200'%>
      </div> 
    </div>
    <!--ここから　投稿内容-->
    <div class="col-xs-8">
      <div class="row form-group">
        <label class="col-sm-3 control-label"> 投稿日:<%= @post_food.created_at.strftime('%Y/%m/%d') %></label>
      </div>
      <div class="row form-group">
        <label class="col-sm-3 control-label"> 料理名:<%= @post_food.name%></label>
      </div>
      <div class="row form-group">
        <label class="col-sm-3 control-label"> 料理説明:<%= @post_food.explanation%></label>
      </div>
      <div class="row form-group">
        <!--いいね、コメント-->
      </div>
      <div class="row form-group">
        <label class="col-sm-3 control-label">参考URL:<%= @post_food.reference_site_url.truncate(10)%></label>
      </div>
      <div class="row form-group">
        <label class="col-sm-3 control-label"> 製作時間:<%= @post_food.time %></label>
      </div>
      <div class="row form-group">
        <label class="col-sm-3 control-label"> 費用:<%= @post_food.cost %></label>
      </div>
      <%= link_to "編集する" edit_post_food_path(@post_food), class: "btn btn-warning"%>
    </div>
  </div>
</div>  
<%= render 'layouts/header'%>
<div class="container">
  <div class= "row">
    <div class="col-xs-4">   
      <h4>評価点数<br/>ユーザーランキング！</h4>
        　<% rateCount =0 %>
          <% s = 1 %>
          <% @all_rank_rates.each.with_index(1) do |post_food, i| %>
            <%if i == 1 %>
              <% rateCount = post_food.rate_avg %>
            <% end %>
            <% if rateCount != post_food.rate_avg %>
            <% s = i%>
            <div class ="posts-rate-area">
              <span>第<%= s %>位</span>
              <span>名前:<%= post_food.user.name%>さん</span>
              <span>料理名:<%= post_food.name%></span>
              <span>評価点数:<%= post_food.rate_avg %></span>
            </div>  
            <% else %>
            <% rateCount = post_food.rate_avg %>
            <div class ="posts-rate-area">
              <span>第<%= s %>位</span>
              <span>名前:<%= post_food.user.name%>さん</span>
              <span>料理名:<%= post_food.name%></span>
              <span>評価点数:<%= post_food.rate_avg %></span>
            </div>  
            <% end %>
          <%end%>  
  　</div> 
　
  <h2>いいね数ユーザーランキング！</h2>
    <div class="col-xs-12 col-xs-offset-4">
        <div class="index-posts-area">
        　<% lateFavorite =0 %>
          <% k = 1 %>
          <% @all_ranks.each.with_index(1) do |post_food, i| %>
                <%if i == 1 %>
                  <% lateFavorite = post_food.post_food_favorites.count %>
                <% end %>
            <div class= posts-area>
            <% if lateFavorite != post_food.post_food_favorites.count %>
                  <% k = i%>
                  第<%= k %>位
                     <div class=img_field>
                        <%= link_to post_food_path(post_food) do %>
                            <%= attachment_image_tag post_food, :image, fallback: "no_image.jpg",size: '150x150'%>
                      	<% end %>
                      </div>	
                    　<p>名前:<%= post_food.user.name%></p>
                      <p>いいね数:<%= post_food.post_food_favorites.count%></p>
                      <p>料理名:<%= post_food.name%></p>
                      <% lateFavorite = post_food.post_food_favorites.count %>
            </div>
            <% else %>
                    <% lateFavorite = post_food.post_food_favorites.count %>
                    第<%= k %>位
                  <div class=img_field>
                    <%= link_to post_food_path(post_food) do %>
                        <%= attachment_image_tag post_food, :image, fallback: "no_image.jpg",size: '150x150'%>
                    <% end %>
                  </div>
                  　<p>名前:<%= post_food.user.name%></p>
                    <p>いいね数:<%= post_food.post_food_favorites.count%><p>
                    <p>料理名:<%= post_food.name%></p>
            </div>
	          <% end %>
          	<br/>
          <% end %>
      </div>
  	</div>
  </div>
</div>  



<%= render 'layouts/footer'%>